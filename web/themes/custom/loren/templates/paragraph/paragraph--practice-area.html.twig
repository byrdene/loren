<div class="practice-area" data-aos="zoom-in-up">
  <div class="practice-area-box">
    {% if content.field_description|render %}
      <button type="button" class="more-info-trigger" aria-label="Read more about {{ content.field_title.0 }}"><span class="pa-link">i</span></button>
    {% endif %}
    {{ content.field_title }}
  </div>
  {% if content.field_description|render %}
    <div class="more-info">
      {{ content.field_description }}
    </div>
  {% endif %}
</div>
