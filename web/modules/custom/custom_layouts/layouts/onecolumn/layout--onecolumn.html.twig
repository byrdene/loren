{#
/**
 * @file
 * Default theme implementation to display a one-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 * - settings: The custom form settings for the layout.
 *
 * @ingroup themeable
 */
#}

{# Attach CSS/JS Libraries #}
{{ attach_library('custom_layouts/global_layouts') }}

{% if content %}
      <div{{ attributes }}>
        <div {{ region_attributes.first.addClass('layout__region', 'layout__region--content') }}>
          {{ content.first }}
        </div>
      </div>
{% endif %}

